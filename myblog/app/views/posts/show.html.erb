<p id="notice"><%= notice %></p>

<div id ="post_content">
<h1 class = "title" >
  <%= @post.title %>
</h1>

<p class = "date">
Submitted <%= time_ago_in_words(@post.created_at)%>ago
<% if user_signed_in?%>
	|<%= link_to 'Edit', edit_post_path(@post) %> | <td><%= link_to 'Delete', post_path(@post), method: :delete, data: { confirm: 'Are you sure?' } %></td>
	| <%= link_to 'Back', posts_path %>
<%end%>
</p>

<p>
  <h2> <%= @post.description %></h2>
</p>

<div id="comments">
<h2><%= @post.comments.count %> Comments</h2>
<%= render @post.comments %>

<h3>Add a comment:</h3>
<%= render "comments/form" %>
</div>
</div>


